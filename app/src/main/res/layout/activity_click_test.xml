<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/clickable_text"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_below="@+id/tv_tip"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:onClick="xmlOnClick"
        android:text="我是TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/iv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="100dp"
        android:layout_toEndOf="@id/tv_tip"
        android:layout_toRightOf="@id/tv_tip"
        android:gravity="center"
        android:text="ImageView"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/clickable_image_view"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_below="@id/iv_tip"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/clickable_text"
        android:layout_toRightOf="@id/clickable_text"
        android:clickable="true"
        android:focusable="true"
        android:onClick="xmlOnClick"
        android:src="@color/colorPrimary" />

    <TextView
        android:id="@+id/ib_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="100dp"
        android:layout_toEndOf="@id/iv_tip"
        android:layout_toRightOf="@id/iv_tip"
        android:gravity="center"
        android:text="ImageButton"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/image_button"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_below="@id/ib_tip"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/clickable_image_view"
        android:layout_toRightOf="@id/clickable_image_view"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/list_view_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="ListView"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/list_view_tip"
        android:background="@android:color/holo_purple" />

    <TextView
        android:id="@+id/grid_view_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="GridView"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/grid_view_tip"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>